    <!-- User icon -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/message_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="User Icon"
        app:layout_constraintBottom_toBottomOf="@+id/message_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearanceOverlay="@style/Circular"
        app:srcCompat="@drawable/default_pfp" />

    <!--User name-->
    <TextView
        android:id="@+id/message_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="User"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/message_profile"
        app:layout_constraintTop_toTopOf="@id/message_profile" />

    <!--Message -->
    <androidx.cardview.widget.CardView
        style="@style/CardStyle"
        android:id="@+id/message_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toEndOf="@+id/message_profile"
        app:layout_constraintTop_toBottomOf="@+id/message_user">

        <LinearLayout
            android:id="@+id/message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:maxWidth="260dp"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:text="Lorem ipsum is a dummy or placeholder text commonly used in graphic design, publishing, and web development. Its purpose is to permit a page layout to be designed, independently of the copy that will subsequently populate it, or to demonstrate various fonts of a typeface without meaningful text that could be distractin"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--Time stamp -->
    <TextView
        android:id="@+id/message_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-10-04 06:26"
        android:textSize="12sp"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toBottomOf="@id/message_user"
        app:layout_constraintStart_toEndOf="@+id/message_user" />
</androidx.constraintlayout.widget.ConstraintLayout>