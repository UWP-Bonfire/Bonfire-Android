<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/card_friend_request_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        style="@style/CardStyle">
        <LinearLayout
            android:id="@+id/layout_friend_request_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <!-- User icon -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/text_chat_list_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="User Icon"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/Circular"
                app:srcCompat="@drawable/default_pfp" />


            <!--User name-->
            <TextView
                android:id="@+id/friend_request_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Loading..."
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/friend_request_yes"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/check_bold"
                android:layout_gravity="center_vertical"
                android:background="#83884e"
                android:layout_margin="2dp"
                />


            <ImageButton
                android:id="@+id/friend_request_no"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/close_thick"
                android:layout_gravity="center_vertical"
                android:background="#c84848"
                android:layout_margin="2dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>