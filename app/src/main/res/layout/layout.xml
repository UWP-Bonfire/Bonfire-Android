<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_content"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/chat_cardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0"
        app:cardBackgroundColor="@color/bg_yellow">

        <LinearLayout
            android:id="@+id/chat_cardView_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:padding="3dp"
            android:paddingStart="10dp">

            <ImageView
                android:id="@+id/chat_cardView_backArrow"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:alpha=".8"
                app:srcCompat="@drawable/arrow_left" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/chat_cardView_UserIcon"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:shapeAppearanceOverlay="@style/Circular"
                app:srcCompat="@drawable/amaice_profile_picture" />

            <TextView
                android:id="@+id/chat_cardView_UserName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="amaice"
                android:textStyle="bold"
                android:textSize="34sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/chat_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/gradient_drawable">

        <LinearLayout
            android:id="@+id/chat_ScrollView_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:text="Text 01" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:text="Text 02" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:text="Text 03" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:text="Text 04" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:text="Text 05" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:text="Text 06" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:text="Text 07" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:text="Text 08" />

        </LinearLayout>
    </ScrollView>



<LinearLayout
    android:id="@+id/chat_MessageBar"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@color/bg_yellow">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/chat_MessageBar_TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="Message"
        android:padding="8dp"
        app:boxBackgroundColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/chat_MessageBar_TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

    </com.google.android.material.textfield.TextInputLayout>


    <ImageView
        android:id="@+id/chat_MessageBar_SendButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:alpha=".8"
        android:contentDescription="Send"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/send" />

    <ImageView
        android:id="@+id/chat_MessageBar_ImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:alpha=".8"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        android:layout_gravity="center"
        android:contentDescription="Image send"
        app:srcCompat="@drawable/image_area" />
</LinearLayout>



</LinearLayout>